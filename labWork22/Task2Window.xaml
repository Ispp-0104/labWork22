<Window x:Class="labWork22.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labWork22"
        mc:Ignorable="d"
        Title="Task2Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
 
        </Grid.RowDefinitions>
        <Button Content="Сохранить логотип для игры" Click="Button_Click" Grid.Row="2" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="listGame" Grid.Row="0"/>
        <ComboBox x:Name="listLogo" Grid.Row="0" Grid.Column="1"/>
        <Image x:Name="LogoGame" Grid.Row="1"/>
    </Grid>
</Window>
