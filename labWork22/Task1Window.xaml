<Window x:Class="labWork22.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labWork22"
        mc:Ignorable="d"
        Title="Task1Window" Height="450" Width="800"
        Loaded="Window_Loaded">
    <StackPanel>
        <DataGrid x:Name="gameDataGrid"/>
        <Button Content="Сохранить изображение" x:Name="checkAndSaveButton" Click="CheckAndSaveButton_Click"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Label Content="" x:Name="currentImage"/>
    </StackPanel>
</Window>
